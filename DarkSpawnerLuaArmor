-- LocalScript: Egg Pet Billboard Randomizer
-- Place this under StarterPlayerScripts

local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Define your pets here: name and image asset ID
local PETS = {
    { Name = "Triceratops",  ImageId = 12345678 },
    { Name = "Pterodactyl",  ImageId = 23456789 },
    { Name = "Stegosaurus",  ImageId = 34567890 },
    { Name = "Velociraptor", ImageId = 45678901 },
    -- add more entries as needed
}

-- Pick a random pet from the list
local function pickRandomPet()
    return PETS[ math.random(1, #PETS) ]
end

-- Create a red-and-black BillboardGui above a given part
over local function makeBillboard(adornee)
    local bgGui = Instance.new("BillboardGui")
    bgGui.Name = "PetBillboard"
    bgGui.Adornee = adornee
    bgGui.Size = UDim2.new(0, 180, 0, 60)
    bgGui.StudsOffset = Vector3.new(0, 3, 0)
    bgGui.AlwaysOnTop = true
    bgGui.Parent = adornee

    local frame = Instance.new("Frame", bgGui)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    frame.BorderSizePixel = 0

    local img = Instance.new("ImageLabel", frame)
    img.Name = "PetIcon"
    img.Size = UDim2.new(0, 48, 0, 48)
    img.Position = UDim2.new(0, 4, 0, 6)
    img.BackgroundTransparency = 1
    img.Image = ""  -- set dynamically

    local label = Instance.new("TextLabel", frame)
    label.Name = "PetName"
    label.Size = UDim2.new(1, -56, 1, 0)
    label.Position = UDim2.new(0, 56, 0, 0)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.GothamBold
    label.TextSize = 20
    label.TextColor3 = Color3.fromRGB(255, 0, 0)
    label.Text = ""

    return { Gui = bgGui, Icon = img, Name = label }
end

-- Gather all egg models in the workspace and attach billboards
o local boards = {}
for _, obj in ipairs(workspace:GetDescendants()) do
    if obj:IsA("Model") and obj.Name:match("Egg") then
        local part = obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart")
        if part then
            table.insert(boards, makeBillboard(part))
        end
    end
end

-- Update every billboard with a new random pet
o local function updateAllBoards()
    local pet = pickRandomPet()
    for _, board in ipairs(boards) do
        board.Icon.Image = "rbxassetid://" .. tostring(pet.ImageId)
        board.Name.Text = pet.Name
    end
end

-- Bind "R" to randomize once (swap for your GUI button logic if desired)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.R then
        updateAllBoards()
    end
end)

-- Initial spawn randomize
updateAllBoards()
